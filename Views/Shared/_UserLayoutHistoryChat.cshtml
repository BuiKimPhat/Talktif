<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <!-- Latest compiled JavaScript -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />

    <!-- Emoji -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.js"></script>

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <link rel="stylesheet" href="../css/HistoryChat.css" />
    <title>@ViewData["Title"] - Program</title>
</head>
<body>
   @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
    $(document).ready(function() {
        $(".report i").click(function() {
            $(".delete-conversation").show();
        });
        @* $("#message").emojioneArea({
            pickerPosition: "top",
        }); *@
        $("#chk").change(function() {
            $("body").toggleClass("dark");
            $(".information-user h2").toggleClass("dark-theme");
            $("p").toggleClass("dark-theme");
            $(".main-history-user .title-chatting h4").toggleClass("dark-theme");
            $(".information-user i.like").toggleClass("dark-theme");
            $("#content-message").toggleClass("dark-message");
            $("#submit-message").toggleClass("dark-message");
            $(".other-message .message-text").toggleClass("dark-message-text");
            $(".time-chat").toggleClass("dark-theme");
        });
        var height = $(window).height()
        if($(window).width() <= 768){
        $(".user-history-item").click(function(){
             $('.chat-history').attr("style", `display: block !important;padding: 0px 0px;height:${height}px`);
             $('.user-history').hide();
             $('#content-message').attr("style", `height:${height - 0.1*height-60}px`)
             @* $('#submit-message').attr("style", `height:${0.1*height}px`) *@
             console.log($(window).width())
        });
        } else{
            $('.chat-history').show();
            $('.user-history').show();
        }
    });
</script>
</body>
</html>
